@namespace Unilake.WebApp.DesignSystem.Components
@inherits UnilakeBaseComponent

@* todo: add dark mode *@
<ul class="@ClassNames">
    @foreach (var item in Items)
    {
        <li>
            <button @onclick="@(async () => await OnItemClick.InvokeAsync(item))"
                    class="inline-flex items-center py-2 px-4 bg-neutral-background-default hover:bg-neutral-background-faded w-full">
                @if (item.LeftIcon != null)
                {
                    <Icon class="mr-2 text-typography-faded" IconInstance="@item.LeftIcon" Size="16"></Icon>
                }
                @item.Label
            </button>
        </li>
    }
</ul>

@code {
    [Parameter] [EditorRequired] public required DropdownItem[] Items { get; set; }
    [Parameter] public EventCallback<DropdownItem> OnItemClick { get; set; }
    protected override string ClassNames => ClassBuilder.Add("rounded-lg shadow-md border flex-col inline-flex text-typography-body border-neutral-background-border-divider text-default").ToString();
}