@using Unilake.WebApp.DesignSystem.Services
@namespace Unilake.WebApp.DesignSystem.Components

<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" name="example-text-input" @bind-value="@ReportName" placeholder="Your report name">
    <Button Variant="ButtonVariant.Bravo" @onclick="() => OffcanvasService.Close()">Close</Button>
</div>

@code {
    [Inject] public IOffcanvasService OffcanvasService { get; init; }

    public string ReportName { get; set; }
}