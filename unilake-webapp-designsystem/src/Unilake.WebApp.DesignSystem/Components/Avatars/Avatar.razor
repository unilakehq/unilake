@namespace Unilake.WebApp.DesignSystem.Components
@inherits UnilakeBaseComponent

<img class="@ClassNames" src="@ImageUrl" alt="Rounded avatar">

@code {
    [Parameter] [EditorRequired] public required string ImageUrl { get; init; }
    [Parameter] public required AvatarSize Size { get; init; } = AvatarSize.Medium;

    protected override string ClassNames => ClassBuilder
        .Add("rounded-full")
        .AddCompare("w-[23px] h-[23px]", Size, AvatarSize.Small)
        .AddCompare("w-[32px] h-[32px]", Size, AvatarSize.Medium)
        .AddCompare("w-[41px] h-[41px]", Size, AvatarSize.Large)
        .ToString();
}